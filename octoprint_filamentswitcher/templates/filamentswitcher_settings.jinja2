<form class="form-horizontal">
    <h2>Communications</h2>
    <div class="control-group">
        <label class="control-label">{{ _('USB Port') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.fsPort">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('USB BaudRate') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.fsBaudRate">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('USB Logfile') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.fsLogfile">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Bowden Tube Length(mm): ') }}</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.fsBowdenLength">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Purge Length(mm): ') }}</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.fsPurgeLength">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Z-Distance(mm): ') }}</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.fsZDistance">
        </div>
    </div>
    <p>****OctoPrint reload is required after changing these values****</p>
    <hr/>

    <div class="control-group">
        <label class="control-label">{{ _('URL') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.filamentswitcher.url">
        </div>
    </div>
</form>

